{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "downlevelIteration": false,
    "declaration": true,
    "strict": true,
    "outDir": "./lib",
    "jsx": "react-native",
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "lib": [
    "es2019",
    "esnext"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}
